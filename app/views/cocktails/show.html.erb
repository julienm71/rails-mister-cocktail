<div class="card text-center">
  <div class="card-header" style="color:black;">
    <%= @cocktail.name %>
    <%= link_to "", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail ?" }, :class => "far fa-trash-alt"%>
    <%= link_to "",  edit_cocktail_path(@cocktail), :class => "fa fa-pencil-alt" %>
    </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to "Ajouter une dose",  new_cocktail_dose_path(@cocktail) %></h5>
  </div>
  <div class="card-footer text-muted">
    <p><i class="fa fa-history" style="color:black;"></i> <%= link_to "Back to index",  cocktails_path %></p>
  </div>
</div>
