<div class="flex">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem; margin:10px;">
      <img class="card-img-top" src="http://www.cafedellastazione.fr/wp-content/uploads/2018/01/cocktails.jpg" alt="Card image cap">
      <div class="card-body">

        <h5 class="card-title"><%= cocktail.name %> -
          <%= link_to "", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail ?" }, :class => "far fa-trash-alt"%>
          <%= link_to "",  edit_cocktail_path(cocktail), :class => "fa fa-pencil-alt" %></h5>

           <% @doses.select do |dose| %>
             <% if cocktail.id == dose.cocktail_id %>
                <p style="font-size:15px; opacity:1; text-shadow: none;" class="card-text"><%= dose.ingredient.name %> (<%= dose.description %>) - <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient ?" }, :class => "far fa-trash-alt"%></p>
             <% end %>
           <% end %>

        <footer class="blockquote-footer"><i class="fa fa-plus-square"></i> <%= link_to "Add a new dose",  new_cocktail_dose_path(cocktail) %></footer>

      </div>
    </div>
  <% end %>
</div>
