<h1>Doses for <%= @cocktail.name %></h1>
<hr>

<% @doses.each do |dose| %>
  <div class="card">
    <div class="card-header">
      <%= dose.id %>#
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= dose.description %></p>
        <footer class="blockquote-footer"> <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient ?" }, :class => "far fa-trash-alt"%></footer>
      </blockquote>
    </div>
  </div>
<% end %>
